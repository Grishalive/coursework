{% extends 'base.html.twig' %}

{% block title %} Catalog {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/dist/themes/default/styles.min.css') }}" />
{% endblock %}

{% block body %}
    <div class="container"><h1>Catalog</h1></div>
    <div class="container">
        <div id="categories"  >
            <img src="img/loading.gif">
        </div>
        <div id="goods" class="column" style="float: right">
            {% if pagination is defined %}
            <table>
                {% for article in pagination %}
                    <tr {% if loop.index is odd %}class="color"{% endif %}>
                        <td><a href="{{ path('show_product', {'id': article.id}) }}">{{ article.name }}</a></td>
                        <td>{{ article.description }}</td>
                    </tr>
                {% endfor %}
            </table>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/js/jstree.js') }}"></script>
    {#<script src="{{ asset('bundles/js/catalog_tree_2.js') }}" type="text/javascript"></script>#}
    <script>
        $('#categories').jstree({ 'core' : {
            'data' :
                    JSON.parse({{ answer|json_encode|raw }})
        } });
        $('#categories').on('select_node.jstree', function (e, data) {
            data.instance.toggle_node(data.node);
            //var node = $(this).jstree('get_selected');
            if (data.node.children.length === 0) {
                $.ajax({
                    type: "POST",
                    url: '{{path('catalog')}}',
                    data: {
                        category_id: data.node.id
                    },
                    success: function(response) {

                       $('#goods').html(response);
                    }
                });
                {#$.post('{{path('catalog')}}',#}
                        {#{id: data.node.id},#}
                        {#function(response){#}
                            {#$('#goods').html(response);#}

                        {#}, "json");#}
            }
        });
    </script>
{% endblock %}

