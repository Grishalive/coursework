{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="container"><h1>{{ title }}</h1></div>
    <div class="container" class="container" style="width: 40%; float: left; padding-left: 8%">
        {{ form_start(form) }}
        <div>
            <div class="form-group">
                {{ form_label(form.name) }}:
                {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div style="float: left; color: #761c19">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div>
            <div style="float: left;">
                {{ form_label(form.isActive) }}:
                {{ form_widget(form.isActive, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div style="float: left; color: #761c19">
                {{ form_errors(form.isActive) }}
            </div>
        </div>
        <div class="container" style="float: right; ">
            <button type="submit" class="btn btn-success" style="width: 200px; float: right">{{ button_text }}</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}