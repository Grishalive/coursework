{% extends 'base.html.twig' %}

{% block title %} Login {% endblock %}

{% block body %}
    <div class="container" style="margin-left: 13%"><h1>Login</h1></div>
    {% if error %}
        <div class="container err" style="color: #a83c3a"><h5>{{ error.messageKey|trans(error.messageData, 'security') }}</h5></div>
    {% endif %}
    <div class="container" style="width: 30%;">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group" >
                <label for="username">Email:</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group" >
                <label  for="password">Password:</label>
                <input class="form-control" type="password" id="password" name="_password" />
            </div>
            <a href="{{ path('register') }}">registration</a>
            <div style="float: right; margin-top: 5%">
                <button type="submit" class="btn btn-success" style="width: 170px; float: right">Login</button>
            </div>
        </form>
    </div>
{% endblock %}


